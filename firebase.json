{
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "python313"
    },
    {
      "source": "email-render-function",
      "codebase": "email-renderer",
      "runtime": "nodejs20",
      "predeploy": [
        "yarn --cwd email-render-function install",
        "yarn --cwd email-render-function build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 5005
    },
    "ui": {
      "enabled": true,
      "port": 5008
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "target": "app",
      "source": "frontend"
    }
  ]
}
